generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  username String @unique
  email String @unique
  hash String

  firstName String?
  lastName String?

  posts Post[]

  @@map("users")
}

model Post {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title String @unique
  description String?
  link String @unique

  userId Int
  user User @relation(fields: [userId], references: [id])

  @@map("posts")
}
